<html>
    <head>
        <title>
            Create Trainer
        </title>
    </head>
    <body>
        <h1>Create trainer</h1>
        <form action="/train/<%= trainer.id%>/update" method="post">
            <label for="trainerName">Name: </label>
            <input type="text" name="trainerName" value="<%= trainer.name %>">

            <label for="age">Age: </label>
            <input type="number" name="trainerAge" value="<%= trainer.age %>">

            <p>
                <strong>Battles total: </strong>
                <%= trainer.battles %>
            </p>

            <p>
                <strong>Wins: </strong>
                <%= trainer.wins %>

            </p>

            <p>
                <strong>Losses</strong>
                <%= trainer.losses %>

            </p>


            <button type="submit">Update trainer</button>
        </form>
    </body>
</html>